#include <stdio.h>
#include <limits.h>

int main() {
    int n, i, time = 0, completed = 0, smallest;
    int bt[20], at[20], rt[20], wt[20], tat[20];
    float avg_wt = 0, avg_tat = 0;

    // Input: Number of processes
    printf("Enter total number of processes: ");
    scanf("%d", &n);

    // Assign arrival times as process numbers (1, 2, 3, ...)
    for (i = 0; i < n; i++) {
        at[i] = i + 1;
    }

    // Input: Burst time for each process
    printf("Enter burst time for each process:\n");
    for (i = 0; i < n; i++) {
        printf("Process %d: ", i + 1);
        scanf("%d", &bt[i]);
        rt[i] = bt[i]; // remaining time initially equals burst time
    }

    // SRTF Scheduling
    while (completed != n) {
        smallest = -1;
        int min_rt = INT_MAX;

        // Find process with smallest remaining time at current time
        for (i = 0; i < n; i++) {
            if (at[i] <= time + 1 && rt[i] > 0 && rt[i] < min_rt) {
                min_rt = rt[i];
                smallest = i;
            }
        }

        if (smallest == -1) {
            time++;
            continue;
        }

        rt[smallest]--;
        time++;

        // If process finishes execution
        if (rt[smallest] == 0) {
            completed++;
            tat[smallest] = time - at[smallest] + 1;
            wt[smallest] = tat[smallest] - bt[smallest];
            if (wt[smallest] < 0) wt[smallest] = 0;
        }
    }

    // Display results and calculate averages
    printf("\nProcess\tBurst Time\tWaiting Time\tTurnaround Time\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t\t%d\t\t%d\n", i + 1, bt[i], wt[i], tat[i]);
        avg_wt += wt[i];
        avg_tat += tat[i];
    }

    // Print average times
    printf("\nAverage Waiting Time = %.2f", avg_wt / n);
    printf("\nAverage Turnaround Time = %.2f\n", avg_tat / n);

    return 0;
}
