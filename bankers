#include <stdio.h>
#include <stdbool.h>

#define P 5
#define R 3 

int main(){
    int available[R] = {3, 3, 2};
    int max[P][R] = {
        {7,5,3},
        {3,3,2},
        {9,0,2},
        {2,2,2},
        {4,3,3}
    };
    int alloc[P][R] =  {
        {0,1,0},
        {2,0,0},
        {3,0,2},
        {2,1,1},
        {0,0,2}
    };
    
    int need[P][R];
    bool finished[P] = {false};
    int safeseq[P];
    int count = 0;
    
    for(int i=0; i<P; i++){
        for(int j=0;j<R; j++){
            need[i][j] = max[i][j] - alloc[i][j];
        }
    }
    
    while(count<P){
        bool found = false;
        for(int i=0;i<P;i++){
            if(!finished[i]){
                bool canAlloc = true;
                for (int j=0; j<R; j++){
                    if(need[i][j]>available[j]){
                        canAlloc = false;
                        break;
                    }
                }
                if(canAlloc){
                    for(int j=0;j<R;j++){
                        available[j]+=alloc[i][j];
                    }
                    safeseq[count++] = i;
                    finished[i] = true;
                    found = true;
                }
            }
        }
        if(!found){
            printf("system in not in a safe state \n");
            return 1;
        }
    }
    printf("system is in a safe state\n safe sequence: ");
    for(int i=0;i<P;i++){
        printf("P%d ", safeseq[i]);
    }printf("\n");
    
    return 0;
}
