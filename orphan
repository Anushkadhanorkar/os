#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>

int main() {
    pid_t pid = fork();

    if (pid == 0) {
        // Child process
        sleep(5); // wait for parent to finish
        printf("Child: I am now an orphan process adopted by init/systemd.\n");
        printf("Child: My new parent PID is %d\n", getppid());
    } else {
        // Parent process
        printf("Parent: My PID is %d\n", getpid());
        printf("Parent: I am exiting, child will become orphan.\n");
        exit(0);
    }
    return 0;
}
